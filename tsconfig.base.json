{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "lib": ["es2019", "dom"],
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "paths": {
      "@a2000/cover": ["packages/cover/src"],
      "@a2000/text-field": ["packages/text-field/src"],
      "@a2000/startup": ["packages/startup/src"],
      "@a2000/stack": ["packages/stack/src"],
      "@a2000/marquee": ["packages/marquee/src"],
      "@a2000/desktop": ["packages/desktop/src"],
      "@a2000/taskbar": ["packages/taskbar/src"],
      "@a2000/select": ["packages/select/src"],
      "@a2000/progress": ["packages/progress/src"],
      "@a2000/icons": ["packages/icons/src"],
      "@a2000/utilities": ["packages/utilities/src"],
      "@a2000/window": ["packages/window/src"]
    }
  },
  "exclude": ["node_modules", "packages/**/tests", "./packages/**/lib/**/*"]
}
